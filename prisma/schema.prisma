// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SharedLink {
  id          String   @id @default(cuid())
  senderEmail String
  createdAt   DateTime @default(now())
  logs        VisitorLog[]
}

model VisitorLog {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  
  // System Info
  systemId  String?

  // Network Identity
  ip        String?
  isp       String?
  org       String?
  asn       String?
  mobile    String?
  proxy     String?
  hosting   String?

  // Geolocation
  city      String?
  region    String?
  country   String?
  lat       Float?
  lon       Float?
  timezone  String?

  // Device / Browser (Allowed fields)
  browser   String?
  os        String?
  cpuArch   String? 
  deviceType String?
  
  // Connection
  connectionType String?

  // Tracking
  linkId    String?
  link      SharedLink? @relation(fields: [linkId], references: [id])
  platform  String?
  visitorEmail String? // Captured via optional lead form
}
